@model IEnumerable<ThemeParkManagementSystem.Entities.Ride>

@{
    ViewData["Title"] = "Rides";
}

<h1>Rides</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Ride</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Capacity</th>
            <th>Wait Time</th>
            <th>Next Maintenance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Capacity.ToString()</td>
                <td>@item.WaitTime.ToString()</td>
                <td>@item.NextMaintenance.ToString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
