@model ThemeParkManagementSystem.Entities.Ride
@using ThemeParkManagementSystem.Entities
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Ride";
}

<h1>Edit Ride</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="WaitTime" class="form-label"></label>
        <input asp-for="WaitTime" class="form-control" type="number" />
        <span asp-validation-for="WaitTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NextMaintenance" class="form-label"></label>
        <input asp-for="NextMaintenance" class="form-control" type="datetime-local" />
        <span asp-validation-for="NextMaintenance" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
