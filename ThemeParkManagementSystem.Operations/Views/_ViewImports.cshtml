@using ThemeParkManagementSystem.Operations
@using ThemeParkManagementSystem.Operations.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Rendering
@using ThemeParkManagementSystem.Entities

<!-- Author: Javier-->
<!--Provides a dropdown list of all available ticket types for filtering or selection-->
