@model ThemeParkManagementSystem.Entities.Ticket


<!-- Author - Javier -->
<!-- This view allows the user to view admission tickets for the Theme Park's Guests-->

@{
    ViewData["Title"] = "Ticket Details";
}

<h1>Ticket Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <dl class="row">
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Valid On</dt>
            <dd class="col-sm-9">@Model.ValidOn.ToShortDateString()</dd>

            <dt class="col-sm-3">Date Purchased</dt>
            <dd class="col-sm-9">@Model.DatePurchased</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
